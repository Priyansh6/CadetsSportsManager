<!DOCTYPE html>
<html>
<head>
  <title>CadetSportsManager</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

  <%= render 'layouts/headers' %>
</head>

<body>
<%= render 'layouts/navbar' %>
<%= render 'layouts/alerts' %>

<%= yield %>

<%= render 'layouts/bulmajs' %>

<script>

    var initialHistoryState = window.history.state;

    // Listen for the window's 'popstate' event
    window.addEventListener('DOMContentLoaded', function(event) {
        // Check if the history state has changed
        if (window.history.state !== initialHistoryState) {
            // Reload the page
            location.reload();
        }
    });


</script>

</body>
</html>
