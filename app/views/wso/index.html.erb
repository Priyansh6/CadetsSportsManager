<section class="hero is-primary">
  <div class="hero-body">
    <p class="title">
      Competitions
    </p>
  </div>
</section>
<section class="section">

  <div class="columns is-multiline">
    <div class="column is-narrow">
      <div class="card">
        <div class="card-content">
          <%= link_to "+ Create Competition", "/wso/competitions/new" %>
        </div>
      </div>
    </div>
    <% @competitions.each do |competition| %>
      <div class="column is-narrow">
        <div class="card">
          <div class="card-content">
            <p class="title">
              <%= competition.title %>
            </p>
            <p class="subtitle">
              Date: <%= competition.competition_date.to_s %>
            </p>
            <p class="subtitle">
              Location: <%= competition.location %>
            </p>
          </div>
          <footer class="card-footer">
            <p class="card-footer-item">
            <span>
              <a href="/wso/competitions/<%= competition.id %>">View</a>
            </span>
            </p>
          </footer>
        </div>
      </div>
    <% end %>
  </div>
</section>
