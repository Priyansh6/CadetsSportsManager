    }

    function clear() {
      console.log("log")
      document.getElementById("count").innerHTML = "0";
      document.getElementById("count").style.display = "none";
      document.getElementById("seen").style.display = "none";
      document.getElementById("clear-action").submit();
      const tmp = document.getElementById("new").innerHTML;
      document.getElementById("new").innerHTML = "";
      document.getElementById("old").innerHTML = tmp + document.getElementById("old").innerHTML;
  }

